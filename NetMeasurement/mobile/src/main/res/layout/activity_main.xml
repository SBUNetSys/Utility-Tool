<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:id="@+id/iteration"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/amount_hint"
        android:inputType="number" />

    <EditText
        android:id="@+id/interval"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/interval_hint"
        android:layout_below="@id/iteration"
        android:inputType="number" />

    <EditText
        android:id="@+id/packet_num"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/packet_hint"
        android:layout_below="@id/interval"
        android:inputType="number" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notify"
        android:id="@+id/notifyBtn"
        android:layout_below="@id/packet_num"
        android:layout_gravity="center_horizontal" />

</RelativeLayout>
